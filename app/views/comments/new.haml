%h4 Neuer Eintrag
= form_for(@comment) do |f|
  .field
    = f.label :comment
    = f.text_field(:comment, :size => 40)
  .field
    = f.hidden_field :commentable_id, :value =>  @cid
    = f.hidden_field :commentable_type, :value => @type
    = f.submit "Save changes", class: "btn btn-large btn-primary"
