.modal.fade{:id => "edit_postit#{postit.id}", :tabindex => "-1"}
  .modal-header
    %h4 Edit postit
  .modal-body
    .modal-body-content
      = form_for(postit) do |f|
        .field
          = f.label :title
        .field
          = f.text_field(:title, :size => 40)
        .field
          = f.label :content
        .field
          = f.text_area(:content, :size => '30x10')
        .field
          = f.submit "Save changes", class: "btn btn-large btn-primary"
          %button.btn{"data-dismiss" => "modal", :type => "button"} Close
